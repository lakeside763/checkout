{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/[productId].tsx",
    "hooks/useProduct.ts",
    "components/products/productRatings.tsx",
    "components/products/addProductReview.tsx",
    "components/products/customerReviews.tsx",
    "components/products/productDetails.tsx",
    "components/products/productReviews.tsx"
  ],
  "exclude": ["node_modules"]
}
